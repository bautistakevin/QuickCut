@model IEnumerable<QuickCutUI.Models.Appointment>

@{
    ViewBag.Title = "Appointments";
}

<h2>Appointments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
           <h6>Barber</h6>
        </th>
        <th>
            <h6>Consumer</h6>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Barber.FirstName)
            @Html.DisplayFor(ModelItem => item.Barber.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Consumer.FirstName)
            @Html.DisplayFor(modelItem => item.Consumer.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AppointmentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AppointmentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AppointmentID })
        </td>
    </tr>
}

</table>
